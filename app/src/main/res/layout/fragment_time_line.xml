<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.astuetz.PagerSlidingTabStrip xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_list_of_trend_tabstrip"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:pstsIndicatorColor="@android:color/white"
        app:pstsIndicatorHeight="5dp"
        android:textSize="16sp"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="false"
        app:pstsDividerColor="@color/colorPrimary"
        app:pstsTabBackground="@drawable/selector_indicator"
        android:textColor="@android:color/white" />


    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_list_of_trend_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>